<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="SmokeTestSuite" verbose="1">
    
    <listeners>
        <listener class-name="com.herokuapp.theinternet.base.TestListener"></listener>
    </listeners>

    <test name="PositiveLoginTests">
        <classes>
            <class name="com.herokuapp.theinternet.loginpagetests.PositiveLoginTests"></class>
        </classes>
    </test>
    <test name="AlertsTests">
        <classes>
            <class name="com.herokuapp.theinternet.alertspagetests.AlertsTests"></class>
        </classes>
    </test>
    <test name="UploadTest">
        <classes>
            <class name="com.herokuapp.theinternet.uploadpagetests.UploadTests"/>
        </classes>
    </test>
</suite>